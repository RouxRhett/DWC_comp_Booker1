<h1>Editing Book</h1>

<%= form_with(model:@book,local: true,class: :edit_book,id: :edit_book) do |f|%>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, id: :book_body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>
